<%- include('partials/head') %>

<body class="bg-gray-100">

  <%- include('partials/nav') %>


  <!-- Main Section -->
  <main class="container mx-auto mt-10 p-4">
    <h1 class="text-4xl font-bold text-center text-teal-600">Register Your Home</h1>
    <div class="flex justify-center">
      <form action="/host/add-home" method="POST" class="bg-white shadow-md rounded-lg p-8 w-full max-w-lg">
        <!-- House Name Input -->
        <div class="mb-6">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="housename">
            House info
          </label>
          <input type="text" name="housename" id="housename" placeholder="Enter the name of your house"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent">
            <input type="text" name="price" id="price" placeholder="Price per night"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent">
            <input type="text" name="Location" id="Location" placeholder="Enter location manually"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent">
            <input type="text" name="photoUrl" id="photoUrl" placeholder="Enter photo url"
            class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-teal-400 focus:border-transparent">
        </div>

        <!-- Submit Button -->
        <div class="flex justify-center">
          <input type="submit" value="Register" 
            class="bg-teal-600 text-white font-semibold py-2 px-6 rounded-md hover:bg-teal-700 transition duration-300 cursor-pointer">
        </div>
      </form>
    </div>
  </main>

</body>
</html>
