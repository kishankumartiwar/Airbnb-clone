<%- include('partials/head') %>
</head>
<body class="bg-gray-50">
  <!-- Navigation Section -->
  <%- include('partials/nav') %>

  <!-- Main Section -->
  <main class="container mx-auto mt-10 text-center">
    <h2 class="text-3xl font-semibold text-teal-600 mb-4">Welcome to Your Home Away From Home!</h2>
    <p class="text-gray-600 mb-8">Explore the best listings and start your journey with us.</p>

    <h1 class="text-teal-600 text-5xl font-bold tracking-wide mb-6">Here are our registered homes:</h1>
    
    <!-- Display Registered Homes as Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      <% registeredHomes.forEach(home => { %>
        <div class="bg-white shadow-md rounded-lg overflow-hidden">
          <img src="<%= home.photoUrl %>" alt="<%= home.housename %>" class="w-full h-48 object-cover">
          <div class="p-4">
            <h2 class="text-lg font-semibold text-blue-500 mb-2"><%= home.housename %></h2>
            <p class="text-gray-700">Location: <%= home.Location %></p>
            <p class="text-teal-600 font-semibold">Price: Rs<%= home.price %></p>
          </div>
        </div>
      <% }) %>
    </div>

    <div class="flex justify-center mt-8">
      <a href="/host/add-home" class="text-lg bg-teal-600 text-white font-semibold py-3 px-8 rounded-lg shadow-md hover:bg-teal-700 transition duration-300">
        Add Home
      </a>
    </div>
  </main>

  <!-- Footer Section -->
  <footer class="bg-gray-100 mt-12 py-6">
    <div class="container mx-auto text-center text-gray-600">
      Â© 2024 Airbnb, Inc. All rights reserved.
    </div>
  </footer>
</body>
</html>
